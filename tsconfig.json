{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "rootDir": "src",
    "outDir": "build"
  },
  "include": ["src/**/*.ts", ".eslintrc.js"],
  "exclude": [
    "node_modules"
  ]
}
